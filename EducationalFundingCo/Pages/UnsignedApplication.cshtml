                <div class="rg-card-simple equal-height">
                    <header>
                        <h5>All Contracts</h5>
                    </header>
                    <section>
                        <div class="rg-card-simple equal-height">
                            <header>
                                <h5>Applications</h5>
                            </header>
                            <section>
                                <form method="post">
