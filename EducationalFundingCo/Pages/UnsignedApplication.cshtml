                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>School Name</th>
                                                @*<th>Phone</th>*@
                                                <th>Program</th>
                                                <th>Signed Date</th>
                                                <th>Status</th>
                                                <th class="text-center">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.Contracts != null)
                                            {
                                        @foreach (var item in Model.Contracts)
                                        {
                                            if (item.DateSigned == null && item.RecordStatus != 0)
                                            {
                                        <tr>
                                                            <td>
                                                                <div class="rg-d-flex">
                                                                    <p class="text-weight-500 mb-0">@item.Id</p>
                                                                </div>
                                                            </td>
                                            <td>
                                                <a asp-page="/Contract/Create" asp-route-id="@item.Id" class="text-highlight-info mb-0">@item.FirstName @item.LastName</a>
                                            </td>
                                            <td>
                                                <div class="rg-d-flex">
                                                    <p class="text-weight-500 mb-0">@item.Email</p>
                                                </div>
                                            </td>
                                                            <td>
                                                                @*@{
                                                                    //string schoolName = HttpContext.Session.GetString("SchoolName").ToString();
                                                                    string schoolName = HttpContext.Session != null ? HttpContext.Session.GetString("SchoolName") : null;


                                                                }*@
                                                                @{
                                                                    string SchoolName = null;

                                                                    string schoolName = HttpContext.Session != null ? HttpContext.Session.GetString("SchoolName") : null;
                                                                    string data = item.School.Name;


                                                                    if (schoolName == null)
                                                                    {
                                                                        SchoolName = data;
                                                                    }
                                                                    else
                                                                    {
                                                                        SchoolName = schoolName;
                                                                    }

                                                                }

                                                                <div class="rg-d-flex">
                                                                    <p class="text-weight-500 mb-0">@SchoolName</p>
                                                                </div>
                                                            </td>
                                       @*     <td>
                                                <div class="rg-d-flex">
                                                    <p class="text-weight-500 mb-0">@item.Phone</p>
                                                </div>
                                            </td>*@
                                            <td>
                                                <div class="rg-d-flex">
                                                    <p class="text-weight-500 mb-0">@item.AcademyProgram.ProgramName</p>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="rg-d-flex">
                                                    <p class="text-weight-500 mb-0">@Convert.ToString(string.Format("{0:MMM dd, yyyy h:mm tt}", item.DateSigned))</p>
                                                </div>
                                            </td>
                                                            <td>
                                                                <div class="rg-d-flex">
                                                                    <p class="text-weight-500 mb-0">@item.RecordStatus</p>
                                                                </div>
                                                            </td>


                                            <td class="text-center">
                                                <span class="material-icons info link" data-toggle="dropdown" aria-haspopup="true"
                                                      aria-expanded="false">more_horiz</span>
                                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                                    <section>
                                                        
                                                        <input type="hidden" name="contractID" id="contractID" asp-for="@item.Id" />
                                                        <div class="dropdown-divider"></div>
                                                                        @if (item.RecordStatus != 0)
                                                                        {
                                                                            <a class="dropdown-item deleteData" id="@item.Id">
                                                                                <i class="material-icons secondary">delete </i>
                                                                                <span>Delete</span>
                                                                            </a>
                                                                        }
                                                        <div class="dropdown-divider"></div>

                                                    </section>
                                                </div>
                                            </td>
                                        </tr>}

                                                        }}
                                        </tbody>
                                    </table>
                                </form>
                            </section>
                        </div>
                    </section>
                </div>
            </div>

            
        </div>

    </div>

</div>


