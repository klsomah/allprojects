@page
@model EducationalFundingCo.Pages.Payment.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_LayoutMain.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].ScheduledDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].Income)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].PaymentMethod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].CompleteDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].TransactionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].Contract)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].AcademyProgram)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Payment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScheduledDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Income)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompleteDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contract.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcademyProgram.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
