@page
@model EducationalFundingCo.Pages.School.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_LayoutMain.cshtml";
}
 

<h1>Onboarding Requests</h1>

@*<p>
    <a asp-page="Create">Create New</a>
</p>*@

<div class="row">
    <div class="col-lg-12">
        <div class="rg-card-simple equal-height">
            <header>
                <div class="heading">
                    <h5>Admin Portal</h5>
                </div>
@*                <div>
                    <a asp-page="Create">Create New</a>
                </div>*@
            </header>

            <section>
                <table id="manageProgram" class="table rg-table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Address</th>
                            <th scope="col">ZipCode</th>
                            <th scope="col">City</th>
                            <th scope="col">Created Date</th>
                            <th scope="col">Status</th>
                            <th scope="text-center"> Actions </th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.School)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ZipCode)
                                </td>
                        @*        <td>
                                    @{
                                  
                                        if (item.USStateId.HasValue && item.State==null)
                                        {
                                            
                                            @Html.DisplayFor(modelItem => item.USStateId.Value)
                                           
                                            
                                        }
                                
                                        else
                                        {
                                            @Html.DisplayFor(modelItem => item.State)   
                                        }
                                    }
                                   
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.City)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedOn)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td class="text-center">
                                    <span class="material-icons info link" data-toggle="dropdown" aria-haspopup="true"
                                          aria-expanded="false">more_horiz</span>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                        <section>
                                            <a class="dropdown-item" asp-page="/School/PreviewSchool" asp-route-id="@item.Id">
                                                <i class="material-icons secondary">pageview</i>
                                                <span>Preview</span>
                                            </a>
                                            
                                            @if (item.RecordStatus == 1)
                                            {
                                                <a class="studentData dropdown-item" id="@item.Id" itemid="@item.Email" itemprop="@item.FirstName" itemscope="@item.LastName">
                                                    <i class="material-icons secondary">done </i>
                                                    <span>Approve</span>
                                                     
                                                </a>

                                            }
 
 

                                            <div class="dropdown-divider"></div>
                                            @if (item.RecordStatus==1)
                                            {
                                                <a class="rejectData dropdown-item" id="@item.Id">
                                                    <i class="material-icons secondary">close </i>
                                                    <span>Reject</span>
                                                    
                                                </a>
                                                
                                            }
                                            <div class="dropdown-divider"></div>
                                            @if (item.RecordStatus == 2)
                                            {
                                                <a class="deactivateData dropdown-item" id="@item.Id">
                                                    <i class="material-icons secondary">close </i>
                                                    <span>Deactivate</span>

                                                </a>

                                            }


    @*                                        <button class=" studentData1 dropdown-item" type="submit" asp-route-id="@item.Id">
                                                <i class="material-icons secondary">close</i>
         
                                            </button>*@
                                            <input type="hidden" name="StatusId" id="StatusId" asp-for="@item.Id" />
                                            <div class="dropdown-divider"></div>
 
                                           
                                        </section>
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </section>
        </div>
        <div class="modal" tabindex="-1" role="dialog" id="successModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title">Status</h3>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <h4>Successfully Accepted.</h4>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btnAccept" class="btn btn-primary">Ok</button>
                         
                    </div>
                </div>
            </div>
        </div>
        <div class="modal" tabindex="-1" role="dialog" id="rejectModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title">Status</h3>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <h4>Successfully Rejected.</h4>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btnReject" class="btn btn-primary">Ok</button>

                    </div>
                </div>
            </div>
        </div>
        <div class="modal" tabindex="-1" role="dialog" id="deactivateModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        @*<h3 class="modal-title">Status</h3>*@
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <h4>Successfully Deactivated.</h4>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btnDeactivate" class="btn btn-primary">Ok</button>

                    </div>
                </div>
            </div>
        </div>


    </div>
   


 

</div>

<script type="text/javascript">


$(document).ready(function() {

        $('#successModal').hide();
        $('#rejectModal').hide();
        $('#submitModal').hide();
    
        //var Id = $('.studentData').attr("id");
        //console.log(Id);


        $('.studentData').click(function (event) {
            debugger;
      
            var Id = jQuery(this).attr("id")
            var userEmail = jQuery(this).attr("itemid")
            var firstName = jQuery(this).attr("itemprop")
            var lastName = jQuery(this).attr("itemscope")


        $.ajax({
            type: "GET",
            url: "@Url.Page("/School/Index","ApproveRequest")",
            data: { "Id": Id, "Email": userEmail ,"FirstName":firstName,"LastName":lastName },
            contentType: "application/json;charset=UTF-8",
            dataType: "json",
            success: function (result) {
                console.log(result);
                    if (result == "Successfully Accepted"){
                        $('#successModal').show();
                        $('#btnAccept').click(function(){
                            location.reload();
                        })
                    }

            },
            error: function (req, status, error) {
                console.log(error);
            }
        });

    });




    $('.rejectData').click(function () {
      
        debugger;

            var Id = jQuery(this).attr("id")

        $.ajax({
            type: "GET",
            url: "@Url.Page("/School/Index","RejectRequest")",
            data: { "Id": Id },
            contentType: "application/json;charset=UTF-8",
            dataType: "json",
            success: function (result) {
                    if (result == "Successfully Rejected") {
                        $('#rejectModal').show();
                        $('#btnReject').click(function () {
                            location.reload();
                        })
                    }
               
            },
            error: function (req, status, error) {
                console.log(error);
            }
        });

    });

        $('.deactivateData').click(function () {



            var Id = jQuery(this).attr("id")

            $.ajax({
                type: "GET",
                url: "@Url.Page("/School/Index","DeactivateRequest")",
                data: { "Id": Id },
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                success: function (result) {
                    if (result == "Successfully Deactivated") {
                        $('#deactivateModal').show();
                        $('#btnDeactivate').click(function () {
                            location.reload();
                        })
                    }

                },
                error: function (req, status, error) {
                    console.log(error);
                }
            });

        });






});



</script>
 




 
 